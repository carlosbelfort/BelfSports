generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role
}

model Event {
  id    Int    @id @default(autoincrement())
  title String
}

model Photo {
  id     Int    @id @default(autoincrement())
  url    String
  status String
}

enum Role {
  ADMIN
  ORGANIZER
  PHOTOGRAPHER
  VIEWER
}

